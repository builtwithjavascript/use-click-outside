{
  "name": "@builtwithjavascript/use-click-outside",
  "version": "1.0.1",
  "description": "Exposes hook useClickOutside to make it easier to listen for clicks outside of an element. Useful for modal or dropdown.",
  "author": "builtwithjavascript",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/builtwithjavascript/use-click-outside.git"
  },
  "bugs": {
    "url": "https://github.com/builtwithjavascript/use-click-outside/issues"
  },
  "homepage": "https://github.com/builtwithjavascript/use-click-outside#readme",
  "keywords": [
    "event listener, dom, utils, helpers, javascript"
  ],
  "scripts": {
    "dev": "vite",
    "build-types": "tsc src/index.ts --esModuleInterop --declaration --emitDeclarationOnly --outDir dist",
    "build": "tsc --esModuleInterop && vite build && npm run build-types",
    "pub": "npm publish --access public",
    "test": "TESTING=true vitest run",
    "test-watch": "TESTING=true vitest watch",
    "pretty": "prettier -w \"./src/**/*.ts\"",
    "version-patch": "npm run pretty && npm version patch -m \"Patch version\"",
    "preversion": "npm run test",
    "version": "npm run build",
    "postversion": "git push"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vitest": "^1.5.0"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/use-click-outside.es.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/use-click-outside.umd.js"
      }
    }
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/use-click-outside.umd.js",
  "module": "./dist/use-click-outside.es.js",
  "dependencies": {
    "@builtwithjavascript/use-event-listener": "^1.0.1"
  }
}
